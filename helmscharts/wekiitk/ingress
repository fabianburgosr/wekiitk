---
{{- if .Values.ingress.enabled -}}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ .Values.master.varappname }}-ingress
  {{- with .Values.ingress.annotations }}
  annotations:
    {{- toYaml . | nindent 4 }}
  {{- end }}
spec:
  rules:
  - host: {{ .Values.wpservice.varurlservice }}
    http:
      paths:
      - pathType: Prefix 
        path: "/"
        backend:
          service:
            name: {{ .Values.wpservice.backendservname1 }}
            port:
              number: {{ .Values.wpservice.backendservport1 }}
  - host: {{ .Values.wpservice.varurlservice2 }}
    http:
      paths:
      - pathType: Prefix 
        path: "/"
        backend:
          service:
            name: {{ .Values.wpservice.backendservname2 }}
            port:
              number: {{ .Values.wpservice.backendservport2 }}          
{{- end }}
