---
{{- if .Values.ingress.enabled -}}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ .Values.container.name }}-gateway-ingress
  {{- with .Values.ingress.annotations }}
  annotations:
    {{- toYaml . | nindent 4 }}
  {{- end }}
spec:
  rules:
  - host: {{ .Values.uriservice }}
    http:
      paths:
      - pathType: Prefix 
        path: "/bpspt/payco/health"
        backend:
          service:
            #name: {{ .Values.container.name }}-gateway-service
            name: {{ .Values.uriservice}}
            port:
              number: {{ .Values.service.port }}
  - host: {{ .Values.uriserviceexternal }}
    http:
      paths:
      - pathType: Prefix 
        path: "/bpspt/payco/(payment/|$)(.*)"
        backend:
          service:
            name: {{ .Values.uriservice}}
            port:
              number: {{ .Values.service.port }}          
{{- end }}
