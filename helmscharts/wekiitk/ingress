---
{{- if .Values.ingress.enabled -}}
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ .Values.container.name }}-gateway-ingress
  {{- with .Values.ingress.annotations }}
  annotations:
    {{- toYaml . | nindent 4 }}
  {{- end }}
spec:
  rules:
  - host: {{ .Values.urlservice }}
    http:
      paths:
      - pathType: Prefix 
        path: "/"
        backend:
          service:
            name: {{ .Values.varapp.backendservname1 }}
            port:
              number: {{ .Values.varapp.backendservport1 }}
  - host: {{ .Values.urlservice }}
    http:
      paths:
      - pathType: Prefix 
        path: "/"
        backend:
          service:
            name: {{ .Values.varapp.backendservname2 }}
            port:
              number: {{ .Values.varapp.backendservport2 }}          
{{- end }}
